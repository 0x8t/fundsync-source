<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Dialog Style -->
    <style name="CustomMaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton.Negative</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogText.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogText.Body</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="DialogButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogButton.Positive">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/debug_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="DialogButton.Negative" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DialogText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DialogText.Title" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogText.Body" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Material 3 Extended FAB Style -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="iconTint">@android:color/white</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="ShapeAppearance.App.Dialog" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
</resources> 